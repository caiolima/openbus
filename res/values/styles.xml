<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

         <style name="LoginBackground" parent="@android:style/Theme.NoTitleBar">
     	<item name="android:background">@drawable/login_back</item>
    </style>
    <style name="Button">
     	<item name="android:background">@drawable/button_selector</item>
     	<item name="android:gravity">center_horizontal|center_vertical</item>
     	<item name="android:textColor">@color/white</item>   	
     	  <item name="android:textSize">16dp</item>
    </style>
    <style name="LogoutButton">
     	<item name="android:background">@drawable/button_selector</item>
     	<item name="android:gravity">center_horizontal|center_vertical</item>
     	<item name="android:textColor">@color/white</item>   	
     	  <item name="android:textSize">13dp</item>
    </style>
     
      <style name="SearchButton">
     	<item name="android:background">@drawable/lupa</item>
     	<item name="android:gravity">center_horizontal|center_vertical</item>
     	
		
    </style>
     <style name="TweetView">
     	<item name="android:background">@drawable/tweet_selector</item>
     	<item name="android:gravity">center_horizontal|center_vertical</item>
     	
		
    </style>
    <style name="DashboardText">
    	<item name="android:textColor">@color/black</item>
    	<item name="android:textStyle">bold</item>
    	
    </style>
    
    
    <style name="Title">
    	<item name="android:background">@drawable/top</item>
    </style>
    <style name="ShowMessage">
        <item name="android:background">@color/light_blue</item>
        <item name="android:drawableBottom">@drawable/line</item>
    </style>
    <style name="FontStyle">
        <item name="android:textSize">16.8dp</item>
    </style>
    <style name="EditTextCustom">
        <item name="android:background">@drawable/rounded_rect</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="ImageButton">
        <item name="android:background">@drawable/image_button_selector</item>
    </style>
   
    
</resources>
